{
	"name": "vue-simple-phone",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"files": ["dist"],
	"main": "./dist/vue-simple-phone.umd.cjs",
	"module": "./dist/vue-simple-phone.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/types/vue-simple-phone.d.ts",
				"default": "./dist/vue-simple-phone.js"
			},
			"require": {
				"types": "./dist/types/vue-simple-phone.d.ts",
				"default": "./dist/vue-simple-phone.umd.cjs"
			}
		},
		"./themes/*": "./dist/themes/*"
	},
	"scripts": {
		"dev": "npm run docs:dev",
		"build": "vue-tsc -b && vite build",
		"preview": "vite preview",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"dependencies": {
		"awesome-phonenumber": "^7.2.0",
		"country-flag-icons": "^1.5.13"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.10.2",
		"@vitejs/plugin-vue": "^5.2.1",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"sass-embedded": "^1.83.0",
		"tailwindcss": "^3.4.16",
		"typescript": "~5.6.2",
		"vite": "^6.0.1",
		"vite-plugin-dts": "^4.3.0",
		"vite-plugin-static-copy": "^2.2.0",
		"vitepress": "^1.5.0",
		"vue": "^3.5.13",
		"vue-accessible-color-picker": "^5.1.0",
		"vue-tsc": "^2.1.10"
	}
